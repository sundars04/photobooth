.post-wrapper
  .post
    .post-head
      .name
        Testuser
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      = @post.caption
    .text-center
      = link_to "Back", posts_path
      |
      = link_to "Edit", edit_post_path(@post)
      |
      = link_to "Delete", post_path, method: :delete, data: {confirm: "Are you sure?"}